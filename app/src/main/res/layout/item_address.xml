<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mp_half"
    android:orientation="vertical"
    android:paddingStart="@dimen/mp_standard"
    android:paddingLeft="@dimen/mp_standard">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/text_s"
        android:textStyle="bold"
        tools:text="Meet Lover\'s g" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mp_quarter"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/subTextColor"
        android:textSize="@dimen/text_xs"
        tools:text="Food, Drinks, Alcohol" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/mp_standard"
        android:background="@color/bgButtonContainer"
        app:layout_constraintTop_toBottomOf="@id/sbRadius" />
</LinearLayout>