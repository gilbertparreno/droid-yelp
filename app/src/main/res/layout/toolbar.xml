<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarContainer"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbarBack"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/mp_standard"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vec_menu_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolBarSearch"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/mp_standard"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vec_menu_search" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="?actionBarSize"
        android:paddingRight="?actionBarSize"
        android:text="Hello World"
        android:textSize="@dimen/text_m"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/mp_quarter"
        android:layout_marginBottom="@dimen/mp_quarter"
        android:adjustViewBounds="true"
        android:paddingLeft="?actionBarSize"
        android:paddingRight="?actionBarSize"
        android:src="@drawable/ic_yelp_header"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbarFilter"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/mp_standard"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vec_menu_filter" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbarClose"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/mp_standard"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vec_menu_close" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbarDone"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/mp_standard"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vec_done" />

</androidx.constraintlayout.widget.ConstraintLayout>