<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mp_standard">

    <ImageView
        android:id="@+id/imgUserProfilePic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/mp_standard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@android:color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mp_half"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserProfilePic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgUserProfilePic"
        app:layout_constraintTop_toTopOf="@+id/imgUserProfilePic">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_s"
            tools:text="Gilbert P." />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rbReviewRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1"
            android:theme="@style/WidgetTheme" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mp_half"
        android:layout_marginTop="@dimen/mp_half"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_xs"
        app:layout_constraintStart_toEndOf="@id/imgUserProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/imgUserProfilePic"
        tools:text="June 5, 2019" />

    <TextView
        android:id="@+id/tvReviewText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mp_half"
        android:layout_marginTop="@dimen/mp_half"
        android:layout_marginEnd="@dimen/mp_standard"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_xs"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgUserProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewDate"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/mp_standard"
        android:background="@color/bgButtonContainer"
        app:layout_constraintStart_toStartOf="@id/tvReviewText"
        app:layout_constraintTop_toBottomOf="@id/tvReviewText" />

</androidx.constraintlayout.widget.ConstraintLayout>